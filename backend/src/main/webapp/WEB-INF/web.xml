<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>MBTI System</display-name>
    <description>MBTI Personality Test System</description>

    <!-- 编码过滤器 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.frostedstar.mbtisystem.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- CORS 过滤器 -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.frostedstar.mbtisystem.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- API 路由 Servlet -->
    <servlet>
        <servlet-name>ApiDispatcherServlet</servlet-name>
        <servlet-class>org.frostedstar.mbtisystem.servlet.ApiDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiDispatcherServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <!-- 会话配置 -->
    <session-config>
        <session-timeout>1440</session-timeout>
        <cookie-config>
            <http-only>false</http-only>
            <secure>false</secure>
            <same-site>None</same-site>
        </cookie-config>
    </session-config>

</web-app>
